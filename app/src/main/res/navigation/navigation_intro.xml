    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_intro.xml"
    app:startDestination="@id/firstIntroFragment">

    <fragment
        android:id="@+id/firstIntroFragment"
        android:name="com.polotechnologies.delvis.ui.intros.FirstIntroFragment"
        android:label="fragment_first_intro"
        tools:layout="@layout/fragment_first_intro" >
        <action
            android:id="@+id/action_firstIntroFragment_to_secondIntroFragment"
            app:destination="@id/secondIntroFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondIntroFragment"
        android:name="com.polotechnologies.delvis.ui.intros.SecondIntroFragment"
        android:label="fragment_second_intro"
        tools:layout="@layout/fragment_second_intro" />
